body
  margin 0; padding 0

.container
  width 970px; margin 0 auto
  clearfix()

.contents
  padding-top 70px

.flex
  box-sizing: border-box; display: flex
  position: relative; flex-shrink: 0
  align-items: stretch; align-content: flex-start
  border: 0 solid black; margin: 0; padding: 0

  &.horizontal
    flex-direction: column
  &.vertical
    flex-direction: row